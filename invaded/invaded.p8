-- invaded game
-- by mouring cat

function _init()
 newgame()
end

function _update()
 if gameover then
  return
 end
 
 update_player()
 update_lasers()
 update_enemies()
 
 if score<=-200 then
   game_over()
 end
 
 wavetimer+=1
 if wavetimer>=wavemaxtimer then
  do_wave(rnd(6)+waveintensity)
 end
end

function _draw()
 cls()
 spr(player.sprite,player.x,player.y)
 draw_lasers()
 draw_enemies()
 ui_overlay()
end
