-- player

function update_player()
 if btn(⬅️) then
  player.x-=2
 end
 if btn(➡️) then
  player.x+=2 
 end
 if btn(⬆️) then
  player.y-=2
 end
 if btn(⬇️) then
  player.y+=2
 end
 if btnp(❎) then
  fire(player.x+3,player.y+3,3,"player",8)
 end
  
 player.x=mid(0,player.x,120)
 player.y=mid(0,player.y,120)
end
