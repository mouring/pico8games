-- tools

function collision_test(x,y,p)
 if x>=p.x and x<=p.x+8 and y>=p.y and y<=p.y+8 then
  return true
 end
 return false
end

function game_over()
 gameover=true
 sfx(2)
end

function newgame()
 player = {
  x=20,
  y=110,
  sprite=1
 }
 lasers = {}
 enemies = {}
 score = 0

 wavemaxtimer = 90
 wavetimer = 90
 waveintensity = 5
 wave = 0
end
